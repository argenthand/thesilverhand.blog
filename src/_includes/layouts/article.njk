---
layout: "layouts/base.njk"
---

{% set previousPost = collections.articles | getPreviousCollectionItem %}
{% set nextPost = collections.articles | getNextCollectionItem %}

<main class="">
  <h1 class="mb-12">{{ title }}</h1>
  <div class="mb-8 uppercase tracking-widest text-slate-600 flex justify-between items-center">
    <p>{{ page.date | readableDate }}</p>
    <div class="flex justify-between gap-3 text-sm">
      {% for tag in tags | filterTagList %}
        <p class="bg-indigo-200 text-indigo-600 py-2 px-3 rounded-full">{{ tag }}</p>
      {% endfor %}
    </div>
  </div>
  <article class="flex justify-start items-start gap-4 flex-col mb-12">{{ content | safe }}</article>
  <p class="mt-2 mb-6">
    If you have any questions or feedback about this article, you can reach out to me at
    <code>hello(at)bhargavshukla(dot)com</code>.
  </p>
  <div class="flex justify-between items-center">
    {% if previousPost %}
      <div>
        <p class="uppercase tracking-widest text-slate-500">Next Article</p>
        <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
      </div>
    {% endif %}
    {% if nextPost %}
      <div class="ml-auto">
        <p class="uppercase tracking-widest text-slate-500">Previous Article</p>
        <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </div>
    {% endif %}
  </div>
</main>
