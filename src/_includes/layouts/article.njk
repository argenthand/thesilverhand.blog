---
layout: "layouts/base.njk"
---

{% set previousPost = collections.articles | getPreviousCollectionItem %}
{% set nextPost = collections.articles | getNextCollectionItem %}

<main class="">
  <h1 class="mb-12">{{ title }}</h1>
  <div class="mb-8 uppercase tracking-widest text-slate-600 flex justify-between items-stretch md:items-center">
    <p class="grow mt-1.5">{{ page.date | readableDate }}</p>
    <div class="hidden md:flex justify-between gap-3 text-sm">
      {% for tag in tags | filterTagList %}
        <p class="bg-indigo-200 text-indigo-700 py-2 px-3 rounded-full text-center">&#127991; {{ tag }}</p>
      {% endfor %}
    </div>
  </div>
  <article class="flex justify-start items-start gap-4 flex-col mb-12">{{ content | safe }}</article>
  <p class="mt-2 mb-6">
    If you have any questions or feedback about this article, feel free to email me at
    <code>feedback (@) thesilverhand (.) blog</code>.
  </p>
  <div class="grid grid-cols-2 justify-center content-start mt-16">
    {% if previousPost %}
      <div class="justify-self-start">
        <p class="uppercase tracking-widest text-slate-600">&larr; Next Article</p>
        <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
      </div>
    {% endif %}
    {% if nextPost %}
      <div class="justify-self-end">
        <p class="uppercase tracking-widest text-slate-600">Previous Article &rarr;</p>
        <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </div>
    {% endif %}
  </div>
</main>
